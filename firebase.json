{
  "hosting": {
    "public": "dist/h-tec/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/manifest.webmanifest",
        "headers": [
          { "key": "Content-Type", "value": "application/manifest+json" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "!/manifest.webmanifest",
        "destination": "/index.html"
      }
    ]
  }
}
